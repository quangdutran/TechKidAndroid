<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="3dp"
    android:id="@+id/place_item">

    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="100dp"
        android:id="@+id/result_image"
        android:src="@mipmap/ic_launcher"
        android:layout_marginRight="20dp"
        />
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:id="@+id/detail_layout"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate: 5.5"
            android:id="@+id/rate_number"
            android:textSize="12sp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asean Internation Hotel"
            android:textSize="17sp"
            android:textStyle="bold"
            android:id="@+id/place_name"
            android:layout_above="@+id/rate_number"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:id="@+id/rating_icon"
            android:layout_toRightOf="@id/rate_number"
            android:layout_below="@+id/place_name"
            android:src="@drawable/ta_rating_1_small"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 km from your place"
            android:textSize="12sp"
            android:id="@+id/distance"
            android:layout_below="@+id/rate_number"
            android:layout_marginTop="5dp"/>
    </RelativeLayout>
</LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#212121"
    android:id="@+id/seperator"
    android:layout_below="@id/place_item"
    android:layout_marginTop="1dp"
    />
</RelativeLayout>