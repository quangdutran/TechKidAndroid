<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tqdu.myapplication.MainActivity">

    <TextView
        android:text="Employee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FAFAFA"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/title"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FAFAFA"
        android:textSize="20sp"
        android:text="Name:"
        android:layout_below="@+id/title"
        android:id="@+id/title_name"
        android:layout_marginTop="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_name"
        android:id="@+id/edit_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FAFAFA"
        android:textSize="20sp"
        android:text="Age:"
        android:layout_below="@+id/edit_name"
        android:id="@+id/title_age"
        android:layout_marginTop="30dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_age"
        android:id="@+id/edit_age"
        android:inputType="number"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FAFAFA"
        android:textSize="20sp"
        android:text="Address:"
        android:layout_below="@+id/edit_age"
        android:id="@+id/title_address"
        android:layout_marginTop="30dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_address"
        android:id="@+id/edit_address"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FAFAFA"
        android:textSize="20sp"
        android:text="Phone:"
        android:layout_below="@+id/edit_address"
        android:id="@+id/title_phone"
        android:layout_marginTop="30dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_phone"
        android:id="@+id/edit_phone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FAFAFA"
        android:textSize="20sp"
        android:text="Sex:"
        android:layout_below="@+id/edit_phone"
        android:id="@+id/title_sex"
        android:layout_marginTop="30dp"/>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radio_group"
        android:layout_below="@+id/title_sex"
        android:paddingTop="10dp"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/male"
            android:text="Male"
            android:textColor="#FAFAFA"
            android:textSize="20sp"
            android:layout_marginRight="40dp" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/female"
            android:text="Female"
            android:textColor="#FAFAFA"
            android:textSize="20sp"
            />
    </RadioGroup>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:textColor="#FAFAFA"
        android:textSize="18sp"
        android:id="@+id/btn_add"
        android:layout_below="@id/radio_group"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
